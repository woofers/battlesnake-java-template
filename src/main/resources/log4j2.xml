<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p %m (%C{2}:%L)%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.log4j.xml" level="all"/>
    <Root level="all">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
